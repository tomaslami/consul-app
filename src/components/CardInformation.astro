---
import "../styles/line.css"
interface Props {
  title: string
  item1: string
  item2: string
  item3: string
  icon: string
}

const { title, item1, item2, item3, icon } = Astro.props
---

<div
  class="sm:w-[340px] w-[300px] sm:h-[300px] h-[275px] bg-white flex justify-center items-center flex-row rounded-2xl shadow-lg p-4"
>
  <div class="flex flex-col items-center justify-center h-full gap-5">
    <h3 class="h-1/5 flex items-start text-2xl font-bold text-center">
      {title}
    </h3>
    <ul
      class="h-3/5 list-disc flex justify-center items-center flex-col w-full gap-3 pl-6"
    >
      <li class="w-full text-start lg:text-base text-sm">
        {item1}
      </li>
      <li class="w-full text-start lg:text-base text-sm">
        {item2}
      </li>
      <li class="w-full text-start lg:text-base text-sm">
        {item3}
      </li>
    </ul>
    <div class="h-1/5 w-full flex items-end justify-center rounded-full">
      <img src={icon} alt="" class="w-[40px] h-[40px]" />
    </div>
  </div>
</div>
